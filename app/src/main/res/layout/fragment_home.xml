<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:background="#267167">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="155dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/logo" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.1"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:background="#267167" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.3"
                                android:background="#fbd005">

                                <TextView
                                    android:id="@+id/tv_AboutUs"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/ramarajaregular"
                                    android:gravity="center"
                                    android:text="ABOUT US"
                                    android:textColor="#267167"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.3"
                                android:background="#267167">

                                <TextView
                                    android:id="@+id/tv_wwd"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ramarajaregular"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="WHAT WE DO"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:background="@android:color/white">

                        <TextView

                            android:id="@+id/tv_News_Events"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ramarajaregular"
                            android:gravity="center|start"
                            android:paddingLeft="10dp"
                            android:paddingTop="7dp"
                            android:text="NEWS &amp; EVENTS"
                            android:textColor="#267167"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.23"
                    android:orientation="vertical">

                    <com.integro.bsk.Utilities.AutoScrollViewPager
                        android:id="@+id/vp_Images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                    <!--

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/rescuedchildren"
                                        android:visibility="visible" />
                    -->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="#fbd005"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:background="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2.25dp"
                    android:background="#267161" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/tv_Donate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ramarajaregular"
                            android:gravity="center"
                            android:text="DONATE"
                            android:textColor="#267161"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4">

                        <ImageView
                            android:id="@+id/iv_Donate_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/donate" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/tv_Support_us"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ramarajaregular"
                            android:gravity="center"
                            android:text="SUPPORT US"
                            android:textColor="#267161"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2.25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#267161" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">

                    <ImageView
                        android:id="@+id/iv_VolImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/volunteer" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="2.25dp"
                android:layout_height="match_parent"
                android:background="#267161" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.25dp"
                        android:background="#267161" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:background="#267161" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@drawable/downbackgroundimage"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.53"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="#fbd005">

                    <TextView
                        android:id="@+id/tv_Volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.7"
                        android:text="BECOME A BOSCO\nVOLUNTEER"
                        android:textColor="#267161"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="2.25dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="2.25dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:background="#267161" />

                    <View
                        android:layout_width="2.25dp"
                        android:layout_height="0dp"
                        android:layout_weight="1.1" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.47"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.95"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="37dp"
                        android:layout_weight="0.4" />

                    <TextView
                        android:id="@+id/tv_newsletter"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="NEWS LETTER"
                        android:textColor="#267161"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.25dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="37dp"
                        android:background="#267161" />

                    <TextView
                        android:id="@+id/tv_Calender"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="CALENDER"

                        android:textColor="#267161"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.25dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="37dp"
                        android:background="#267161" />

                    <TextView
                        android:id="@+id/tv_policies"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="POLICIES"
                        android:textColor="#267161"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.25dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="37dp"
                        android:background="#267161" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.05"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Collaborations"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/text_link_selector_bg"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="7dp"
                        android:text="COLLABORATIONS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_Activities"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="ACTIVITIES"
                        android:textColor="#267161"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_Website"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ramarajaregular"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="WEBSITE"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="3dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
            android:layout_weight="0.7">
            
            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:videoId="28rgyG3oKt4"/>
            
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>